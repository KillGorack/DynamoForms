<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DynamoForms</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DynamoForms.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Content/Index">
                    <img src="~/img/ico/PX5_LOGO_WHITE.svg" alt="PX5 Logo" style="height: 40px; width: auto;" />
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @await Component.InvokeAsync("Navi")
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light">
        <div class="container">
            &copy; 2025 - DynamoForms - <a asp-area="" asp-page="/Privacy" class="text-light">Privacy</a>
        </div>
    </footer>
    @{
        var registry = ViewData["Registry"] as DynamoForms.Data.AppRegistry;
    }
    @if (registry != null)
    {
        <div class="container mt-3">
            <button class="btn btn-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#registryCollapse" aria-expanded="false" aria-controls="registryCollapse">
                Toggle Registry
            </button>
            <div class="collapse mt-2" id="registryCollapse">
                <pre class="bg-dark text-light p-3 rounded" style="max-height: 300px; overflow-y: auto;">
                    @System.Text.Json.JsonSerializer.Serialize(registry, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })
                </pre>
            </div>
        </div>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@page
@model TableListModel

<a class="btn btn-primary mb-2" asp-page="TableAdd" asp-route-table="@Model.TableName">Add Record</a>

<table class="table table-sm">
    <thead>
        <tr>
        <tr>
            @foreach (var col in Model.Columns)
            {
                var isSorted = Model.SortColumn == col.ColumnName;
                var nextSortDesc = isSorted ? !Model.SortDescending : false;
                var sortIcon = isSorted
                ? (Model.SortDescending ? "&#8595;" : "&#8593;") // ↓ or ↑
                : "";

                <th>
                    <a asp-page="/TableList"
                       asp-route-table="@Model.TableName"
                       asp-route-pageNumber="@Model.PageNumber"
                       asp-route-sortColumn="@col.ColumnName"
                       asp-route-sortDesc="@nextSortDesc"
                       style="text-decoration:none;">
                        @col.ColumnName @Html.Raw(sortIcon)
                    </a>
                </th>
            }
            <th class="fixed-col-width">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model.Records)
        {
            <tr>
                @{
                    var pkCol = Model.Columns.FirstOrDefault(c => c.IsPrimaryKey)?.ColumnName;
                    var pkVal = pkCol != null && record.ContainsKey(pkCol) ? record[pkCol] : null;
                }
                @foreach (var col in Model.Columns)
                {
                    <td>
                        @{
                            var value = record.ContainsKey(col.ColumnName) ? record[col.ColumnName] : "";
                            if (col.DataType == "date" && value is not null && value.ToString() != "")
                            {
                                DateTime dt;
                                if (DateTime.TryParse(value.ToString(), out dt))
                                {
                                    @dt.ToString("yyyy-MM-dd")
                                }
                                else
                                {
                                    @value
                                }
                            }
                            else if (col.DataType == "bit")
                            {
                                <input type="checkbox" disabled @(Convert.ToBoolean(value ?? false) ? "checked" : "") />
                            }
                            else
                            {
                                @value
                            }
                        }
                    </td>
                }
                <td class="fixed-col-width">
                    <form method="post" asp-page-handler="Delete" asp-route-table="@Model.TableName" asp-route-id="@pkVal" style="display:inline;">
                        <button type="submit" class="btn btn-link btn-sm text-danger p-0" title="Delete"
                                onclick="return confirm('Are you sure you want to delete this record?');">
                            🗑
                        </button>
                    </form>
                    <a class="btn btn-link btn-sm text-warning p-0" title="Edit"
                       asp-page="TableEdit"
                       asp-route-table="@Model.TableName"
                       asp-route-id="@pkVal">
                        ✏
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    var startPage = Math.Max(1, Model.PageNumber - 3);
    var endPage = Math.Min(Model.TotalPages, Model.PageNumber + 3);

    <nav>
        <ul class="pagination">
            <!-- First -->
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/TableList"
                   asp-route-table="@Model.TableName"
                   asp-route-pageNumber="1" title="First"
                   asp-route-sortColumn="@Model.SortColumn"
                   asp-route-sortDesc="@Model.SortDescending">
                   &#171; <!-- « -->
                </a>
            </li>
            <!-- Previous -->
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/TableList"
                   asp-route-table="@Model.TableName"
                   asp-route-pageNumber="@(Model.PageNumber - 1)" title="Previous"
                   asp-route-sortColumn="@Model.SortColumn"
                   asp-route-sortDesc="@Model.SortDescending">
                   &#8249; <!-- ‹ -->
                </a>
            </li>

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       asp-page="/TableList"
                       asp-route-table="@Model.TableName"
                       asp-route-pageNumber="@i"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortDesc="@Model.SortDescending">
                        @i
                    </a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/TableList"
                   asp-route-table="@Model.TableName"
                   asp-route-pageNumber="@(Model.PageNumber + 1)" title="Next"
                   asp-route-sortColumn="@Model.SortColumn"
                   asp-route-sortDesc="@Model.SortDescending">
                   &#8250; <!-- › -->
                </a>
            </li>
            <!-- Last -->
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/TableList"
                   asp-route-table="@Model.TableName"
                   asp-route-pageNumber="@Model.TotalPages" title="Last"
                   asp-route-sortColumn="@Model.SortColumn"
                   asp-route-sortDesc="@Model.SortDescending">
                   &#187; <!-- » -->
                </a>
            </li>
        </ul>
    </nav>
}